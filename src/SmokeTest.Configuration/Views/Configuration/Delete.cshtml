@model SmokeTest.Configuration.Models.DeleteConfigurationModel
@{
    ViewData["Title"] = "Delete Configuration";
}

<div class="hb">
    <div class="row">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>
</div>
@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0)
{
    <div class="alert alert-error">
        <a class="close" data-dismiss="alert">×</a>
        <h5 class="alert-heading">Please correct the following errors to continue</h5>
        <div class="row">
            <div class="col-sm-12">
                @Html.ValidationSummary(true)
            </div>
        </div>
    </div>
}

@using (Html.BeginForm(nameof(SmokeTest.Configuration.Controllers.ConfigurationController.Delete), SmokeTest.Configuration.Controllers.ConfigurationController.Name, FormMethod.Post, new { id = "frmDeleteConfiguration" }))
{
    @Html.HiddenFor(m => m.UniqueId)
    <div class="hb">
        <div class="row">
            <div class="col-sm-12 col-md-3">
                Type DELETE to confirm deletion of the configuration
            </div>
            <div class="col-sm-12 col-md-9">
                @Html.TextBoxFor(m => m.Confirm, new { @class = "form-control", style = "width:150px;" })
                @Html.ValidationMessageFor(m => m.Confirm)
            </div>
        </div>
        <div class="row ac-row">
            <div class="col-sm-12 col-md-3">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
            <div class="col-sm-12 col-md-9">

            </div>
        </div>
    </div>
}
